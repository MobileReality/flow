{
  "compilerOptions": {
    "lib": ["es2021"],
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "incremental": false,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "."
  },
  "include": ["src/**/*"]
}
